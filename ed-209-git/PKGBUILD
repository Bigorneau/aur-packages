# Maintainer: Patrice Blin <dev@patriceblin.com>
pkgname=ed-209
pkgver=20160913.b21c6b7
pkgrel=1
pkgdesc="nodejs IRC bot"
arch=('any')
url="https://github.com/putaindebot/ed-209"
license=('GPL')
groups=()
depends=()
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
replaces=()
backup=()
options=()
install=
_source="https://github.com/putaindebot/ed-209.git"
source=("${pkgname}::git+${_source}#branch=2016")
noextract=()
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
# Git, no tags available
	printf "%s.%s" "$(git show --no-patch --format=%ad --date=format:'%Y%m%d' HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
	cd "$srcdir/${pkgname%-git}"
}

build() {
	cd "$srcdir/${pkgname%-git}"
	npm install
}

package() {
	cd "$srcdir/${pkgname%-git}"
}
